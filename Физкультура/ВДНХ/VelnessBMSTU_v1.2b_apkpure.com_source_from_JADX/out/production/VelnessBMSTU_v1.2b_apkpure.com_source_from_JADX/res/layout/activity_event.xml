        <TextView map:textColor="#fff" map:layout_width="match_parent" map:layout_height="wrap_content" map:layout_marginTop="15dp" map:text="Как добраться:" />
        <TextView map:textColor="#fff" map:id="@+id/coordinates" map:layout_width="match_parent" map:layout_height="wrap_content" map:layout_marginTop="5dp" map:text="1324567" />
    </LinearLayout>
</FrameLayout>
